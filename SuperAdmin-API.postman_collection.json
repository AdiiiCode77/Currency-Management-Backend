{
  "info": {
    "name": "Super Admin API Collection",
    "description": "Complete API endpoints for Super Admin module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminId",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "paymentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Super Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@dirham.com\",\n  \"password\": \"SuperAdmin@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/super-admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["super-admin", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Management",
      "item": [
        {
          "name": "Create Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('adminId', jsonData.admin.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@123\",\n  \"name\": \"Test Admin\",\n  \"phone\": \"+923001234567\",\n  \"type\": \"regional\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/super-admin/admins",
              "host": ["{{baseUrl}}"],
              "path": ["super-admin", "admins"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Admins",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/super-admin/admins?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["super-admin", "admins"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "type",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "block_status",
                  "value": "false",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Admin By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/super-admin/admins/{{adminId}}",
              "host": ["{{baseUrl}}"],
              "path": ["super-admin", "admins", "{{adminId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Admin",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Admin Name\",\n  \"phone\": \"+923009876543\",\n  \"type\": \"senior\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/super-admin/admins/{{adminId}}",
              "host": ["{{baseUrl}}"],
              "path": ["super-admin", "admins", "{{adminId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Admin",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/super-admin/admins/{{adminId}}",
              "host": ["{{baseUrl}}"],
              "path": ["super-admin", "admins", "{{adminId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment Management",
      "item": [
        {
          "name": "Create Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('paymentId', jsonData.payment.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"admin_id\": \"{{adminId}}\",\n  \"amount\": 5000,\n  \"status\": \"pending\",\n  \"description\": \"Monthly subscription fee\",\n  \"due_date\": \"2026-02-28\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/super-admin/payments",
              "host": ["{{baseUrl}}"],
              "path": ["super-admin", "payments"]
            }
          },
          "response": []
